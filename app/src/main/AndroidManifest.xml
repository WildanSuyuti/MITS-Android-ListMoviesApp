<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mits.kakaroto.listmovieapp">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".fitur.movie.MovieActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".fitur.user.DashboardActivity"></meta-data>
        </activity>

        <activity
            android:name=".fitur.movie.FormMovieActivity"
            android:label="Form Movie">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".fitur.movie.MovieActivity">
            </meta-data>
        </activity>


        <activity android:name=".fitur.auth.LoginActivity">
        </activity>

        <activity
            android:name=".fitur.main.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".fitur.auth.RegisterUserActivity"
            android:label="Register">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".fitur.user.DashboardActivity">
            </meta-data>

        </activity>

        <activity
            android:name=".fitur.user.DashboardActivity"
            android:label="Dashbord"></activity>

        <activity
            android:name=".fitur.user.UpdateUserActivity"
            android:label="Update User">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".fitur.user.DashboardActivity"></meta-data>
        </activity>

    </application>

</manifest>